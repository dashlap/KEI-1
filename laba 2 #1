#dz2

#include <stdio.h>
#include <math.h>
#include <Windows.h>

void main()
{
	SetConsoleCP(1251);
	SetConsoleOutputCP(1251);

	printf("Вычислить сдачу на кассе\n");

	int a, b, s;

	printf("Введите стоимость товара = ");
	scanf_s("%d", &a);

	printf("Введите сумму, которую вам дали за товар = ");
	scanf_s("%d", &b);
	s = b - a;
	printf("Сдача составляет - %d \n", s);

}
