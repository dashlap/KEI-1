#dz1

#include <stdio.h>
#include <math.h>
#include <Windows.h>

void main()
{
	SetConsoleCP(1251);
	SetConsoleOutputCP(1251);

	printf("Вычислить объём куба\n");

	float a;

	printf("Введите ребро куба a = ");
	scanf_s("%f", &a);

	float sk = a * a * a;

	printf("Площадь куба = %f\n", sk);

}
